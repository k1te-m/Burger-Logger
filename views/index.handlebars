<h1>Eat-Da-Burger!</h1>

<ul>
    {{#each burgers}}
      {{> burgers/burger-block}}
    {{/each}}
</ul>


<h2>Add a Burger!</h2>
<form class="create-burger">

    <div class="form-group">
        <label for="burger">Enter the burger you want to eat!</label>
        <input type="text" id="burger" name="burger">
    </div>
    <button type="submit">Add Burger</button>
</form>